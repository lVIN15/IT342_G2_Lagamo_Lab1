<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_modal_card"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="32dp"
    android:paddingTop="36dp"
    android:paddingBottom="28dp">

    <!-- Warning icon circle -->
    <TextView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_toast_icon_error"
        android:gravity="center"
        android:text="!"
        android:textColor="@color/error_red"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_title"
        android:textColor="@color/text_white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_message"
        android:textColor="@color/text_white_60"
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.5"
        android:gravity="center"
        android:layout_marginBottom="28dp" />

    <!-- Buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--  Cancel -->
        <Button
            android:id="@+id/btn_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button_ghost"
            android:text="@string/btn_cancel"
            android:textColor="@color/text_white_90"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:stateListAnimator="@null" />

        <!-- Yes, Logout -->
        <Button
            android:id="@+id/btn_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_primary"
            android:text="@string/btn_yes_logout"
            android:textColor="@color/text_white"
            android:textSize="15sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:stateListAnimator="@null" />
    </LinearLayout>

</LinearLayout>
